generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  password      String?
  role          UserRole  @default(PATIENT)
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  patient       Patient?
  professional  Professional?
  
  sessions      Session[]
  accounts      Account[]

  @@map("users")
}

model Patient {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  phone       String?
  dateOfBirth DateTime?
  gender      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  medicalRecord   MedicalRecord?
  appointments    Appointment[]
  prescriptions   Prescription[]  
  vitalSigns      VitalSign[]     
  medicalReports  MedicalReport[]

  @@map("patients")
}

model MedicalRecord {
  id               String   @id @default(cuid())
  patientId        String   @unique
  patient          Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
  bloodType        String?
  height           Int?     // en cm
  weight           Float?   // en kg
  allergies        String[]
  medications      String[]
  conditions       String[]
  emergencyContact String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("medical_records")
}

model MedicalReport {
  id              String        @id @default(cuid())
  patientId       String
  professionalId  String
  title           String
  recordType      ReportType
  content         String
  diagnosis       String?
  treatment       String?
  prescriptions   String[]
  recommendations String?
  severity        SeverityLevel
  followUpDate    DateTime?
  
  patient       Patient     @relation(fields: [patientId], references: [id])
  professional  Professional @relation(fields: [professionalId], references: [id])
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@map("medical_reports")
}

model Professional {
  id            String   @id @default(cuid())
  userId        String   @unique
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  specialty     String
  licenseNumber String?
  phone         String?
  
  appointments    Appointment[]
  prescriptions   Prescription[] 
  availabilities  Availability[]
  medicalReports  MedicalReport[]
  
  @@map("professionals")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expires      DateTime
  
  @@map("sessions")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Appointment {
  id             String     @id @default(cuid())
  patientId      String
  professionalId String
  date           DateTime
  duration       Int     
  status         AppointmentStatus @default(SCHEDULED)
  reason         String?
  notes          String?
  diagnosis      String?   
  treatment      String?  
  
  patient      Patient     @relation(fields: [patientId], references: [id])
  professional Professional @relation(fields: [professionalId], references: [id])
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@map("appointments")
}

model VitalSign {
  id        String   @id @default(cuid())
  patientId String
  type      VitalSignType
  value     String
  unit      String
  measuredAt DateTime @default(now())
  
  patient   Patient  @relation(fields: [patientId], references: [id])
  
  @@map("vital_signs")
}

model Availability {
  id              String   @id @default(cuid())
  professionalId  String
  professional    Professional @relation(fields: [professionalId], references: [id], onDelete: Cascade)
  
  dayOfWeek       Int      // 0-6 (dimanche-samedi)
  startTime       String   // "09:00"
  endTime         String   // "17:00"
  isActive        Boolean  @default(true)
  
  breaks          Break[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@unique([professionalId, dayOfWeek])
}
model Prescription {
  id             String             @id @default(cuid())
  patientId      String
  professionalId String
  medication     String
  dosage         String
  frequency      String
  duration       String  
  instructions   String?
  status         PrescriptionStatus @default(ACTIVE)
  
  patient      Patient     @relation(fields: [patientId], references: [id])
  professional Professional @relation(fields: [professionalId], references: [id])
  
  prescribedAt DateTime @default(now())
  
  @@map("prescriptions")
}
model Break {
  id              String   @id @default(cuid())
  availabilityId  String
  availability    Availability @relation(fields: [availabilityId], references: [id], onDelete: Cascade)
  
  startTime       String   // "12:00"
  endTime         String   // "13:30"
  
  createdAt       DateTime @default(now())
}

enum UserRole {
  PATIENT
  DOCTOR
  ADMIN
}
enum PrescriptionStatus {
  ACTIVE
  COMPLETED
  CANCELLED
}

enum BloodType {
  A_POSITIVE
  A_NEGATIVE
  B_POSITIVE
  B_NEGATIVE
  AB_POSITIVE
  AB_NEGATIVE
  O_POSITIVE
  O_NEGATIVE
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum AppointmentStatus {
  SCHEDULED
  CONFIRMED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  NO_SHOW
}

enum RecordType {
  ALLERGY
  CONDITION
  PROCEDURE
  LAB_RESULT
  IMAGING
  NOTE
  VACCINATION
}

enum ReportType {
  NOTE
  CONDITION
  PROCEDURE
  LAB_RESULT
  IMAGING
  VACCINATION
  CONSULTATION
}

enum SeverityLevel {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum VitalSignType {
  BLOOD_PRESSURE
  HEART_RATE
  TEMPERATURE
  OXYGEN_SATURATION
  WEIGHT
  HEIGHT
  BLOOD_GLUCOSE
}